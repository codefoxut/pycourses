<loginScreen>:
	GridLayout:
		cols: 1
		GridLayout:
			cols: 1
			padding: 15, 15
			spacing: 20, 20
			Label:
				text: "User Login"
				font_size: "20sp"
			TextInput:
				id: username
				hint_text: "Username"
			TextInput:
				id: password
				password: True
				hint_text: "Password"
			RelativeLayout:
				Button:
					text: "Login"
					size_hint: 0.3, 0.5
					pos_hint: {'center_x': 0.5, 'center_y': 0.6}
					on_press: root.login(root.ids.username.text, root.ids.password.text)
			Label:
				id : error_msg
				text: ""

		GridLayout:
			cols: 2
			size_hint: 0.2, 0.2
			padding: 10, 10
			spacing: 10, 0
			Button:
				text: "Forgot Password?"
				background_color: 1, 1, 1, 0
				color: 0.3, 0.7, 1, 1
				opacity: 1 if self.state == "normal" else 0.5
			Button:
				text: "Sign Up"
				background_color: 1, 1, 1, 0
				color: 0.3, 0.7, 1, 1
				opacity: 1 if self.state == "normal" else 0.5
				on_press: root.sign_up()

<SignUpScreen>:
	GridLayout:
		cols: 1
		padding: 20, 20
		spacing: 20, 20
		Label:
			text: "Sign up for a space journey!"
		TextInput:
			id: username
			hint_text: "Username"
		TextInput:
			id: password
			password: True
			hint_text: "Password"
		Button:
			text: "Submit"
			on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpSuccessScreen>:
	GridLayout:
		cols: 1
		Label:
			text: "Sign up successful!"
		Button:
			text: "Login page"
			on_press: root.go_to_login_page()

<LoginSuccessScreen>:
	GridLayout:
		cols: 1
		padding: 30, 30
		spacing: 30, 30
		RelativeLayout:
			ImageButton:
				size_hint: 0.35, 0.35
				pos_hint: {'center_x': 0.92, 'center_y': 0.8}
				source: "images/logout_hover.png" if self.hovered else "images/logout_nothover.png"
				on_press: root.log_out()
		Label:
			text: "How do you feel?"
		TextInput:
			id: feeling
			hint_text: "Things to try: happy, sad, unloved..."
		Button:
			text: "Enlighten me"
			on_press: root.get_quote(root.ids.feeling.text)
		ScrollView:
			Label:
				id : quote
				text: ""
				text_size: self.width, None
				size_hint_y: None
				height: self.texture_size[1]

<RootWidget>:
	LoginScreen:
		name: "login_screen"
	SignUpScreen:
		name: "sign_up_screen"
	SignUpSuccessScreen:
		name: "sign_up_success"
	LoginSuccessScreen:
		name: "login_success"

